{{> head}}
{{> nav}}

<!-- Main Feed -->
<div class="main-feed">
    {{#each events}}
    <!-- Post Card -->
    <div class="post-card">
        <div class="post-header">
            <img src="{{userProfilePhoto}}" alt="User Posted Photo" class="post-photo">
            <h3 class="username">{{username}}</h3>
            <button class="recipe-button">View Recipe</button>
        </div>
        <div class="post-content">
            <img src="{{postPhoto}}" alt="Posted Photo" class="post-photo">
            <p class="caption">{{caption}}</p>
            <!-- Like, Comment, Repost Buttons -->
            <div class="post-actions">
                <button class="action-button">Like</button>
                <button class="action-button">Comment</button>
                <button class="action-button">Repost</button>
            </div>
        </div>        
    </div>
    {{/each}}
</div>

