<!-- Main Feed -->
<div class="main-feed">
    {{#each posts}}
    <!-- Post Card -->
    <div class="post-card">
        <div class="post-header">
            <h3 class="username">{{author}}</h3>
            <p class="date">{{date_created}}</p>
            <button class="recipe-button">View Recipe</button>
        </div>
        
        <div class="post-content">
            <img src="{{image_url}}" alt="Posted Photo" class="post-photo">
            <p class="caption">{{caption}}</p>
            <!-- Like, Comment, Repost Buttons -->
            <div class="post-actions">
                <form action="/like-post" method="POST">
                    <button class="action-button">Like</button>
                </form>  
                <form action="/comment-post" method="POST">
                    <button class="action-button">Comment</button>
                </form>   
                <form action="/repost-post" method="POST">
                    <button class="action-button">Repost</button>
                </form>    
            </div>
        </div>
    </div>
    {{/each}}
</div>


