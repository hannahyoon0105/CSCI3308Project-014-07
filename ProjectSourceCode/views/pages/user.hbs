{{!-- pfp --}}

<div class="card">
  <p>{{> message}}</p>
    <div class="card-body">
    <div class="row">
    {{!-- <div class="col text-left" id="profile-picture">
        <img src={{profile_picture}} class="img-thumbnail" height="100px" width="100px"
        style="border-radius: 50%;">
    </div> --}}
      <div class="col text-left">
        <h1>{{user}}</h1>
        <p>{{followers}} followers â€¢ {{following}} following</p>
      </div>
      <div class="col text-left"></div>
      <div class="col text-left"></div>
      <div class="col text-right">
        {{#if self}}
        {{else if is_Followed.exists}}
            <form action="/follow-user-u" method="POST">
                    <input type="hidden" name="username" value={{username}}> 
                    <input type="hidden" name="followee" value={{user}}> 
                    <button class="btn btn-secondary followed">Following</button>           
            </form>
        {{else}}
            <form action="/follow-user-u" method="POST">
                    <input type="hidden" name="username" value={{username}}> 
                    <input type="hidden" name="followee" value={{user}}> 
                    <button class="btn btn-primary">Follow</button>         
            </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{!-- loop to display each post from a user --}}
<div style="margin: 2rem;">
  <h2>Posts:</h2>
  <div class="row">
    {{#each posts}}
      <div class="col" style="margin-top: 1rem">
        <div class="card" style="width: 300px;">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-6">  
                <div class="card-body embed-responsive embed-responsive-3by3">
                  <form action="/recipe" method="GET">
                    <input type="hidden" name="recipe_id" value={{recipe_id}}>
                    <button class="action-button btn btn-link" style="margin-top: 10px;">View Recipe</button>
                  </form> 
                  <img src={{this.image_url}} class="card-img-top" width="100%" height="150px" class="img-fluid">
                </div>
              </div>
            </div>
          </div>
          <div class="card-body"> 
            <div class="row justify-content-center">
              <h3>{{this.title}}</h3>
            </div>
            <div class="row justify-content-center">
              <p>{{this.caption}}</p>
            </div>
            <div class="row justify-content-center">
              <p>{{fixDate this.date_created}}</p>
            </div>  
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

